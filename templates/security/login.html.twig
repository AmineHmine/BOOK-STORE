{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<br><br><br><br>
	<br><br><br><br>
	{% if app.user %}
		<br><br><br><br>
	{% endif %}
	<div align="center" class="formulaire uk-width-1-3  uk-card uk-card-default uk-card-body uk-align-center" style="margin-bottom:34px">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="uk-margin" style="margin-bottom:42px">
					You are logged in as
					{{ app.user.email }},
					<a class="uk-button uk-button-secondary" href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			{% if not app.user %}


				<h1 class="h3 mb-3 font-weight-normal">Please login</h1>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="uk-input uk-form-width-large " autocomplete="email" required autofocus placeholder="email">
				<input type="password" name="password" id="inputPassword" class="uk-input uk-form-width-large uk-margin" autocomplete="current-password" required placeholder="password">
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
											        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
											        See https://symfony.com/doc/current/security/remember_me.html
											
											        <div class="checkbox mb-3">
											            <label>
											                <input type="checkbox" name="_remember_me"> Remember me
											            </label>
											        </div>
											    #}

				<button class="uk-button uk-button-secondary uk-margin" type="submit">
					Login
				</button>
				{% endif %}
			</form>
		</div>

		<br><br><br><br>
		<br><br>
			{% if app.user %}
		<br><br><br>
	{% endif %}
	
{% endblock %}
