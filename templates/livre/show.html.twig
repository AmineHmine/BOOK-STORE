{% extends 'base.html.twig' %}

{% block title %}Livre
{% endblock %}

{% block body %}

	<div align="center" class="formulaire uk-width-2-3  uk-card uk-card-default uk-card-body uk-align-center ">
		<h1>Livre</h1>

		<table class="uk-table">
			<tbody>
				<tr>
					<td rowspan="6" style="width:50%">
						<svg class="bd-placeholder-img" width="100%" height="400" xmlns="http://www.w3.org/2000/svg" preserveaspectratio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
							<image xlink:href="{{asset('assets/image/5.png')}}" width="100%" height="400" x="0%" y="0%"/>
						</svg>
					</td>
					<td>Id</td>
					<td>{{ livre.id }}</td>
				</tr>
				<tr>
					<td>Isbn</td>
					<td>{{ livre.isbn }}</td>
				</tr>
				<tr>
					<td>Titre</td>
					<td>{{ livre.titre }}</td>
				</tr>
				<tr>
					<td>Nombre_pages</td>
					<td>{{ livre.nombrePages }}</td>
				</tr>
				<tr>
					<td>Date_de_parution</td>
					<td>{{ livre.dateDeParution ? livre.dateDeParution|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<td>Note</td>
					<td>{{ livre.note }}</td>
				</tr>
			</tbody>
		</table>
		<h2>Auteurs : --- </h2>
		<h2>Genres : --- </h2>
		


		<a class="uk-button uk-button-secondary" href="{{ path('livre_index') }}" uk-icon="list" uk-tooltip="back to list"></a>
		{% if app.user %}
			{% if app.user.roles[0]=="ROLE_ADMIN"  %}
				<a href="{{ path('livre_edit', {'id': livre.id}) }}" class="uk-button uk-button-secondary" uk-icon="pencil" uk-tooltip="edit"></a>
			{% endif %}
		{% endif %}

		{{ include('livre/_delete_form.html.twig') }}

	</div>
{% endblock %}
