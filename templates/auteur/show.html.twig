{% extends 'base.html.twig' %}

{% block title %}Auteur
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.9.4/dist/css/uikit.min.css"/>
	<link rel="stylesheet" href="{{asset('assets/style.css')}}"/>
{% endblock %}

{% block body %}
	<br><br><br><br>
	<div align="center" class="formulaire uk-width-1-2  uk-card uk-card-default uk-card-body uk-align-center " style="margin-bottom:68px">
            <h1>Auteur</h1>
		<table class="uk-table uk-width-1-2 uk-table-justify">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ auteur.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ auteur.nom }}</td>
				</tr>
				<tr>
					<th>Prenom</th>
					<td>{{ auteur.prenom }}</td>
				</tr>
				<tr>
					<th>Sexe</th>
					<td>{{ auteur.sexe }}</td>
				</tr>
				<tr>
					<th>Nationalite</th>
					<td>{{ auteur.nationalite }}</td>
				</tr>
			</tbody>
		</table>

		<a class="uk-button uk-button-secondary" href="{{ path('auteur_index') }}" uk-icon="list" uk-tooltip="back to list"></a>
		{% if app.user %}
			{% if app.user.roles[0]=="ROLE_ADMIN"  %}
				<a href="{{ path('auteur_edit', {'id': auteur.id}) }}" class="uk-button uk-button-secondary" uk-icon="pencil" uk-tooltip="edit"></a>
			{% endif %}
		{% endif %}

		{{ include('auteur/_delete_form.html.twig') }}
	</div>
<br><br>

{% endblock %}
